<body>
    <%- include('../partials/header') %>
        <main class="mainProductForm">
            <section class="sectionProductForm">
                <h2 class="form__titulo">REGISTRAR PRODUCTO</h2>
                <form>
                    <div>
                        <label for="productName" class="formLabel">Nombre del Producto</label>
                        <input type="text" id="productName" placeholder="Adidas Low" class="formInput" required/>
                    </div>
                    <div>
                        <label for="productBrand" class="formLabel">Marca</label>
                        <input type="text" id="productBrand" placeholder="Adidas" class="formInput" required/>
                    </div>
                    <div>
                        <label for="productPrice" class="formLabel">Precio</label>
                        <input type="number" id="productPrice" placeholder="59000" min="20000" class="formInput" required/>
                    </div>
                    <label for="productDescription" class="formLabel">Talles Disponibles</label>
                    <div class="formCheckboxContainer">
                        <% for(let i=37; i <=43; i++) { %>
                            <div>
                                <label>
                                    <%= i %>
                                </label>
                                <input type="checkbox" value="<%= i %>" name="formTalles"/>
                            </div>
                            <% } %>
                    </div>
                    <div>
                        <label for="productImage" class="formLabel">Imagen</label>
                        <input type="file" id="productImage" accept="image/*" class="formInput" required/>
                    </div>
                    <div>
                        <label for="productDescription" class="formLabel">Descripci칩n</label>
                        <textarea id="productDescription" placeholder="Ingrese la descripci칩n del producto..." class="textArea" required></textarea>
                    </div>
                    <button class="button--cyan" type="submit">Registrar</button>
                </form>
            </section>
        </main>
</body>
